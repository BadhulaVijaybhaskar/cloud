# ATOM Cloud Default Environment Settings
# Phase H.2 Neural Fabric Safety Defaults

# Neural Fabric Configuration
NEURAL_FABRIC_MODE=simulation
SIMULATION_MODE=true
PQC_MODE=hybrid
GPU_DRIVER_MOCK=true

# Security Settings
VAULT_ADDR=http://localhost:8200
COSIGN_KEY_PATH=/vault/cosign/keys
VAULT_PQC_KEY_PATH=/vault/pqc/keys

# Neural Framework Settings
PYTORCH_MOCK=true
TENSORFLOW_MOCK=true
ONNX_MOCK=true

# Performance Settings
MAX_GPU_MEMORY_GB=40
MAX_INFERENCE_TIME_MS=800
AUTOSCALE_THRESHOLD=0.8

# Telemetry Settings
TELEMETRY_RETENTION_DAYS=7
METRICS_AGGREGATION_INTERVAL=60
LOG_LEVEL=INFO

# Multi-tenancy
DEFAULT_TENANT_ISOLATION=strict
TENANT_RESOURCE_LIMITS=true

# Compliance
AUDIT_LOGGING=true
PII_DETECTION=true
POLICY_ENFORCEMENT=strict