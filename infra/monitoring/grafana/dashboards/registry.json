{
  "dashboard": {
    "id": null,
    "title": "ATOM Workflow Registry",
    "tags": ["atom", "registry"],
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "stat",
        "targets": [{"expr": "rate(http_requests_total{job=\"workflow-registry\"}[5m])"}],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Time",
        "type": "timeseries", 
        "targets": [{"expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"workflow-registry\"}[5m]))"}],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "30s"
  }
}