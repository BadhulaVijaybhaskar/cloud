{
  "project": {
    "name": "ATOM Cloud — Autonomous Development Tracker",
    "description": "Full lifecycle tracker for ATOM Cloud (Phases 0.5 → H). Designed for autonomous execution by the coding agent.",
    "view": "table",
    "columns": [
      { "name": "Backlog", "purpose": "Ideas and unapproved proposals" },
      { "name": "Ready", "purpose": "Approved .md agent files ready for execution" },
      { "name": "In Progress", "purpose": "Tasks currently being executed by the coding agent" },
      { "name": "Testing / Verification", "purpose": "Integration testing and validation phase" },
      { "name": "Done", "purpose": "Merged and validated deliverables" },
      { "name": "Blocked", "purpose": "Items awaiting infra, API, or external dependency resolution" }
    ],
    "fields": [
      { "name": "Phase ID", "type": "text", "example": "F.5" },
      { "name": "Category", "type": "single_select", "options": ["Infra", "AI", "UI", "Security", "Federation", "Quantum"] },
      { "name": "Branch", "type": "text", "example": "prod-feature/F.5-security-fabric" },
      { "name": "Status", "type": "single_select", "options": ["Planned", "Running", "Testing", "Done", "Blocked"] },
      { "name": "Agent File", "type": "text", "example": "/docs/Phase_F.5_Security_Fabric_Agent.md" },
      { "name": "Report Path", "type": "text", "example": "/reports/F.5_security_fabric.md" },
      { "name": "Owner", "type": "text", "example": "@coding-agent" },
      { "name": "Priority", "type": "single_select", "options": ["High", "Medium", "Low"] },
      { "name": "Snapshot Tag", "type": "text", "example": "v6.0.0-phaseF" }
    ],
    "milestones": [
      { "id": "0.5", "name": "Phase 0.5 — Plug-and-Play Orchestration", "target_tag": "v0.5.0" },
      { "id": "A", "name": "Phase A — Foundation", "target_tag": "v1.0.0" },
      { "id": "B", "name": "Phase B — NeuralOps", "target_tag": "v2.0.0" },
      { "id": "C", "name": "Phase C — Intelligence & Performance", "target_tag": "v3.0.0" },
      { "id": "D", "name": "Phase D — Deep Intelligence & Autonomous Ops", "target_tag": "v4.0.0" },
      { "id": "E", "name": "Phase E — Ecosystem & Marketplace", "target_tag": "v5.0.0" },
      { "id": "F", "name": "Phase F — Launchpad Cloud", "target_tag": "v6.0.0" },
      { "id": "F.5", "name": "Phase F.5 — Security Fabric Foundation", "target_tag": "v6.1.0" },
      { "id": "F.6", "name": "Phase F.6 — Data Studio & Developer Console", "target_tag": "v6.2.0" },
      { "id": "G", "name": "Phase G — Global Scale & Federation", "target_tag": "v7.0.0" },
      { "id": "H", "name": "Phase H — Quantum / Neural Fabric", "target_tag": "v8.0.0" }
    ],
    "automation_rules": [
      {
        "trigger": "pull_request.opened",
        "action": "move_to",
        "column": "In Progress",
        "note": "When agent opens PR → move task to In Progress"
      },
      {
        "trigger": "pull_request.closed",
        "condition": "merged",
        "action": "move_to",
        "column": "Done",
        "note": "When PR merged → mark Done"
      },
      {
        "trigger": "issue.labeled",
        "condition": "label == 'blocked'",
        "action": "move_to",
        "column": "Blocked",
        "note": "If issue marked blocked → move automatically"
      },
      {
        "trigger": "workflow.failure",
        "action": "move_to",
        "column": "Testing / Verification",
        "note": "CI failure routes to Testing/Verification"
      }
    ],
    "default_labels": [
      "agent-plan",
      "phase-F",
      "security",
      "AI",
      "backend",
      "frontend",
      "infrastructure",
      "marketplace",
      "federation",
      "quantum"
    ],
    "agents": [
      {
        "name": "coding-agent",
        "description": "Primary autonomous coding executor for Phases F–H",
        "permissions": {
          "branches": ["prod-feature/*"],
          "directories": ["services/", "ui/", "infra/", "tests/", "reports/", "docs/"]
        }
      }
    ],
    "reports": {
      "required": [
        "/reports/Phase*_Snapshot.json",
        "/reports/*_summary.md",
        "/reports/logs/*.log"
      ],
      "storage": "repo",
      "visibility": "public"
    }
  }
}
